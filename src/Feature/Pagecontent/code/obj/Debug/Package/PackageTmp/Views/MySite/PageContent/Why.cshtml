@model IEnumerable<MySite.Feature.PageContent.Models.IWhyItem>

@if (Model == null)
{
    <div class="alert alert-warning" role="alert">
        No information to display.
    </div>
    return;
}

<section class="us_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Why Choose Us
            </h2>
        </div>

        <div class="us_container ">
            <div class="row">
                @foreach (var whyItem in Model)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="box">
                            <div class="img-box">
                                <img src="@whyItem.Icon.Src" alt="icon">
                            </div>
                            <div class="detail-box">
                                <h5>
                                    @whyItem.Title
                                </h5>
                                <p>
                                    @whyItem.Description
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>