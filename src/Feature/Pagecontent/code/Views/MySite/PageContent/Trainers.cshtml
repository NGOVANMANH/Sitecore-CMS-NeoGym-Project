@model IEnumerable<MySite.Feature.PageContent.Models.ITrainerItem>

@if (Model == null)
{
    <div class="alert alert-warning" role="alert">
        No trainers to display.
    </div>
    return;
}

<section class="trainer_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Our Gym Trainers
            </h2>
        </div>
        <div class="row">
            @foreach (var trainer in Model)
            {
                <div class="col-lg-4 col-md-6 mx-auto">
                    <div class="box">
                        <div class="name">
                            <h5>
                                @trainer.TrainerName
                            </h5>
                        </div>
                        <div class="img-box">
                            <img src="@trainer.TrainerThumbnail.Src" alt="trainer">
                        </div>
                        <div class="social_box">
                            @foreach (var socialUrl in trainer.SocialUrls)
                            {
                                <a href="@socialUrl.CtaUrl.Url">
                                    <img src="@string.Format("{0}", string.IsNullOrEmpty(socialUrl.Icon.Src) ? "/assets/images/facebook-logo.png" : socialUrl.Icon.Src) " alt="@socialUrl.PlatformName">
                                </a>
                            }

                            @*<a href="">
                                    <img src="assets/images/facebook-logo.png" alt="">
                                </a>
                                <a href="">
                                    <img src="assets/images/twitter.png" alt="">
                                </a>
                                <a href="">
                                    <img src="assets/images/instagram-logo.png" alt="">
                                </a>*@
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
